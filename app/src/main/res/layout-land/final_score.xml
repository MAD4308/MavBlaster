<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <com.example.insy4308.mavblaster.openGLES2.OurGLSurfaceView
        android:id="@+id/final_surface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.insy4308.mavblaster.FinalScore"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:id="@+id/cascadingMavId"
            android:background="@drawable/cascading_mav2"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="55sp"
            android:textColor="@color/utaOrange"
            android:text="1000"
            android:id="@+id/score"
            android:layout_below="@+id/finalScoreId"
            android:layout_alignRight="@+id/finalScoreId"
            android:layout_alignEnd="@+id/finalScoreId"
            android:layout_marginRight="28dp"
            android:layout_marginEnd="28dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:id="@+id/replayId"
            android:background="@drawable/replay_button_image"
            android:layout_below="@+id/score"
            android:layout_alignRight="@+id/score"
            android:layout_alignEnd="@+id/score" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:id="@+id/shareId"
            android:background="@drawable/share_button_image"
            android:layout_below="@+id/replayId"
            android:layout_alignRight="@+id/score"
            android:layout_alignEnd="@+id/score" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:id="@+id/topScoresId"
            android:background="@drawable/top_scores_button_image"
            android:layout_below="@+id/shareId"
            android:layout_alignRight="@+id/score"
            android:layout_alignEnd="@+id/score" />

        <ImageView
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:background="@drawable/final_score_image"
            android:id="@+id/finalScoreId"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</FrameLayout>