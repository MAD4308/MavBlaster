<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.insy4308.mavblaster.DepartmentSelection"
    android:background="@drawable/background2">

    <Button
        android:id="@+id/fina"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/fina_icon"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imageView"
        android:layout_toStartOf="@+id/imageView" />

    <Button
        android:id="@+id/mana"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/mana_icon"
        android:layout_alignTop="@+id/insy"
        android:layout_alignLeft="@+id/econ"
        android:layout_alignStart="@+id/econ" />

    <Button
        android:id="@+id/acct"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/acct_icon"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/fina"
        android:layout_alignStart="@+id/fina" />

    <Button
        android:id="@+id/econ"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/econ_icon"
        android:layout_alignTop="@+id/fina"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp" />

    <Button
        android:id="@+id/mktg"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/mark_icon"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/econ"
        android:layout_alignStart="@+id/econ" />

    <Button
        android:id="@+id/insy"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/insy_icon"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/fina"
        android:layout_alignStart="@+id/fina" />

    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:id="@+id/imageView"
        android:src="@drawable/choose"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>