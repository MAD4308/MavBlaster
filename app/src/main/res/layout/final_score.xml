<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <com.example.insy4308.mavblaster.openGLES2.OurGLSurfaceView
        android:id="@+id/final_surface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.insy4308.mavblaster.FinalScore"
        android:layout_gravity="center">



        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="270dp"
            android:id="@+id/cascadingMavId"
            android:background="@drawable/cascading_mav"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="48sp"
            android:textColor="@color/utaOrange"
            android:text="1000"
            android:id="@+id/score"
            android:layout_alignBottom="@+id/finalScoreId"
            android:layout_alignRight="@+id/cascadingMavId"
            android:layout_alignEnd="@+id/cascadingMavId" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:id="@+id/replayId"
            android:background="@drawable/replay_button_image"
            android:layout_below="@+id/score"
            android:layout_alignLeft="@+id/shareId"
            android:layout_alignStart="@+id/shareId" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:background="@drawable/share_button_image"
            android:id="@+id/shareId"
            android:layout_below="@+id/replayId"
            android:layout_centerHorizontal="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:background="@drawable/top_scores_button_image"
            android:id="@+id/topScoresId"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="190dp"
            android:layout_height="60dp"
            android:background="@drawable/final_score_image"
            android:id="@+id/finalScoreId"
            android:layout_below="@+id/cascadingMavId"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
</FrameLayout>
